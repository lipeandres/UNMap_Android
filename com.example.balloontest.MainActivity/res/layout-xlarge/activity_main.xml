<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.balloontest.CustomMapView
        android:id="@+id/mapViewMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:apiKey="039lc3gZQeAtLW3A_QgX9qQ-cQnb8Z8mCz31bUg"
        android:clickable="true"
        android:enabled="true" />

    <ImageButton
        android:id="@+id/building_search_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/search_button"
        android:scaleType="centerInside"
        android:text="Select" />

    <AutoCompleteTextView 
        android:id="@+id/searchbox"
        android:layout_toRightOf="@id/building_search_button"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:singleLine="true"
        android:background="@drawable/background_search"
        android:textColor="#C8FFFFFF"
        android:textCursorDrawable="@null"
        />
         <ImageButton
             android:id="@+id/layer_selection_button"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:layout_alignParentBottom="true"
             android:layout_toLeftOf="@+id/information_button"
             android:background="@drawable/layers_button"
             android:scaleType="centerInside" />

               <ImageButton
        android:id="@+id/information_button"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/info_button"/>
                           <ImageButton
        android:id="@+id/un_logo"
        android:layout_width="146dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/un_logo"/>

</RelativeLayout>